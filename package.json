{
    "name": "spotify-playlist",
    "type": "module",
    "private": true,
    "scripts": {
        "build": "nuxt build",
        "clean": "npx nuxi cleanup && rm -rf node_modules/ && rm -rf .nuxt/ && rm package-lock.json",
        "dev": "nuxt dev",
        "format": "prettier --write **/*.{js,json,jsx,css,ts,tsx,vue}",
        "format-check": "prettier --check \"**/*.{html,js,json,jsx,css,ts,tsx,vue,scss}\"",
        "generate": "nuxt generate",
        "lint": "eslint .",
        "postinstall": "nuxt prepare",
        "prepare": "simple-git-hooks",
        "preview": "nuxt preview",
        "type-check": "nuxt typecheck"
    },
    "dependencies": {
        "@antfu/eslint-config": "^5.2.0",
        "@nuxt/eslint": "^1.8.0",
        "@nuxt/ui": "^3.3.0",
        "eslint": "^9.33.0",
        "lodash": "^4.17.21",
        "nuxt": "^4.0.3",
        "rollbar": "^2.26.4",
        "typescript": "^5.9.2",
        "vue": "^3.5.18",
        "vue-router": "^4.5.1",
        "zod": "^4.0.17"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.8.1",
        "@iconify-json/lucide": "^1.2.62",
        "@types/lodash": "^4.17.20",
        "lint-staged": "^16.1.5",
        "prettier": "^3.6.2",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "simple-git-hooks": "^2.13.1",
        "vue-tsc": "^3.0.5"
    },
    "simple-git-hooks": {
        "commit-msg": "npx commitlint --edit \"$1\"",
        "pre-commit": "npx lint-staged"
    },
    "lint-staged": {
        "*.{html,js,json,css,ts,vue}": "prettier --check",
        "*.{js,ts,vue}": "eslint"
    }
}
